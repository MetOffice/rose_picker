
module test_hard_coded_value

    implicit none
    contains

  function test_function(bottom, top) result (vertical_type)

    implicit none

    integer(i_def), intent(in), optional  :: bottom, top

    integer(i_def)                        :: upper_level, lower_level

    type(test_type) :: test_type1

    test_type1 = test_type(&
                    test_name = 'test_string',            &
                    another_test_string = '',             &
                    test_symbol = TEST_SYMBOL,            &
                    lower_level = lower_level,            &
                    upper_level = upper_level)

  end function test_function
end module test_hard_coded_value